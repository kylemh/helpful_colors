html {
  font-size: $rem-base;
}

html,
body {
  width: 100vw;
  height: 100vh;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  overflow: hidden;
  font-family: $font;
}

* {
  box-sizing: border-box;

  &:before,
  &:after {
    box-sizing: inherit;
  }
}

.app {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-flow: column nowrap;
}

main {
  display: flex;
  flex-flow: row nowrap;
  flex-grow: 1;
}

// http://type-scale.com/
// Perfect Fourth
h1 {
  font-size: 3.157rem;
  text-decoration: underline;
}

h2 {
  font-size: 2.369rem;
}

h3 {
  font-size: 1.777rem;
}

h4 {
  font-size: 1.333rem;
}

small, .font_small {
  font-size: 0.7rem;
}
