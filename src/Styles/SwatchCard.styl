.swatch-card {
    display: inline-block;
    width: $swatch-width-normal;
    height: $swatch-height-normal;
    border-radius: 10px;
    background-color: $white;
    box-shadow: 0 0 10px 1px $gray--200;
    padding: 0;
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    // TODO: Use function for transition

    &--small {
        width: $swatch-width-small;
        height: $swatch-height-small;
    }

    &--large {
        width: $swatch-width-large;
        height: $swatch-height-large;
        box-shadow: 0 5px 10px 4px $gray--200 !important;
    }

    &:hover {
        cursor: pointer;
        box-shadow: 0 3px 8px 4px $gray--200;
    }

    &__color {
        padding: 10px;
        width: 99.5%;
        height: 79.5%;
        margin: 0.25%;
        border-radius: 10px 10px 0 0;
    }

    &__text {
        flexContainer(centerContent=true, inlineFlex=false, flexDirection='row')
        align-items: flex-start;
        background-color: $white;
        width: 100%;
        height: 20%;
        border-radius: 0 0 10px 10px;
        padding: rem(5) rem(5) rem(5) rem(15)
    }
}
