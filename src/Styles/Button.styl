button {
    margin: rem(8)
    border: none
    font-size: 1em
    cursor: pointer
    padding: rem(8 16)
    background: $white
    displayFontBold();
    border: 1px solid $black;
    border-radius: rem(5);
    transition: background 250ms ease;
    min-width: 150px;

    &:hover {
        background: $gray--100;
    }
}
