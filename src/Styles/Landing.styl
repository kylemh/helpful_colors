.landing {
  margin: rem(16);                                          // Rem Calc Function
  padding: rem(16);
  background: $primary;                                       // Color variables
  text-align: center;
  bodyFont();                                                // Font Stack Mixin

  p {
    font-size: rem(40);
  }

  button {
    margin: rem(8)
    border: none
    font-size: 1em
    cursor: pointer
    padding: rem(8 16)
    background: $white
    displayFontBold();
    border-radius: rem(5);
    transition: background 250ms ease

    &:hover {
      background: $gray--100
    }
  }

  div {
    flexContainer(false, true, 'column');                // Flex Container Mixin
    position: relative;
    margin: rem(15) auto;
    padding: rem(20);
    border-radius: 5px;
    background: $white;

    > h1,
    > h2 {
      flexItem();                                             // Flex Item mixin
      displayFontBold();
    }

    &::before {
      arrow(                                                      // Arrow mixin
        arrowDirection: 'top',
        arrowHeight: 10px,
        arrowWidth: 16px,
        color: $white,
        positioned: true
      );
    }
  }

  .outerspace {
    flexContainer(true);
    margin: initial;
    padding: initial;
    border-radius: initial;
    background: none;

    &::before {
      display: none;
    }

    .spacheman {
      cursor: pointer;
      user-select: none;
      transition: transform 250ms ease;
      transform: scale(1);
      transition-delay: 3400ms;

      &:hover {
        transform: scale(0);

        & + .rocket {
          left: 55vw;
          top: -10vh;
        }
      }
    }

    .rocket {
      left: 0vw;
      top: 110vh;
      z-index: 1;
      color: black;                                     // Satisfies aXe warning
      position: fixed;
      transition: transform 4000ms linear,
                  left 4000ms linear,
                  top 4000ms linear
      transform: rotate(-20deg);
      animation: fly 4000ms linear infinite;
    }
  }
}

@keyframes fly {
  20%, 40%, 60%, 80% {
    transform: rotate(-20deg);
  }

  10%, 30%, 50%, 70%, 90% {
    transform: rotate(-25deg);
  }
}
