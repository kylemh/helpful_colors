.page-nav {
    width: 200px;
    padding: 2.5% 0 1% 0;

    &__list {
        display: flex;
        flex-flow: row nowrap;
        justify-content: space-around;
        align-items: center;

    }

    &__number {
        padding: 0 10px;
    }

    &__number a {
        color: $gray--900;
        text-decoration: none;
        font-weight: normal;
    }
}
