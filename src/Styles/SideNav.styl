.side-nav {
  display: flex;
  flex-wrap: nowrap;
  justify-items: space-around;
  align-items: center;
  border-right: 1px solid $black;
  background-color: $secondary;

  &--desktop {
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    width: 20vw;
    height: 90vh;
    flex-grow: 1;
    padding: 25px;
  }

  &--mobile {
    flex-direction: row;
    width: 100%;
    height: 75px;
  }

  button {
    margin-bottom: 35px;
  }

  &__links {
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-around;
  width: 80%;

    ul {
      display: flex;
      flex-flow: column nowrap;
      justify-content: space-bewteen;
      align-items: left;

      li {
        padding-bottom: 20px;
      }
    }

    a {
      text-decoration: none;
      color: $font-color;

      &:hover {
        color: $link-hover
        text-decoration: underline;
      }

      &:active {
        text-decoration: underline;
      }
    }
  }
}
